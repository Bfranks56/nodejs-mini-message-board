<html>
  <head>
    <title>Mini Message Board</title>
  </head>
  <body>
    <nav style="background-color: #f8f9fa; padding: 10px; color: red;">
        <%- include('navbar', {links: links}) %>
    </nav>
    <div>
        <% messages.forEach((message, index) => { %>
            <div style="border: 1px solid black; padding: 10px; margin-bottom: 10px;">
                <h3><%= message.user %></h3>
                <p><%= message.text %></p>
                <i>Posted on: <%= message.added %></i>
                <br><br>
                <a href="/messages/<%= index %>" style="background-color: #007bff; color: white; padding: 5px 10px; text-decoration: none; border-radius: 3px;">Open</a>
            </div>
        <% }) %>
    </div>
  </body>
</html>
